BRAND_GODS_VESSEL_ENABLED=true
BRAND_TIMEZONE_TRAVELERS_ENABLED=true

# ===================== Posting Schedules (cron) =====================
SCHEDULE_ANIDAX_POSTING=0 9,15,21 * * *
SCHEDULE_DAX_TRAVELER_POSTING=0 8,14,20 * * *
SCHEDULE_GODS_VESSEL_POSTING=0 7,12,19 * * *
SCHEDULE_TIMEZONE_TRAVELERS_POSTING=0 10,16,22 * * *

# ===================== Daily Content Limits =====================
MAX_POSTS_PER_DAY_ANIDAX=5
MAX_POSTS_PER_DAY_DAX_TRAVELER=4
MAX_POSTS_PER_DAY_GODS_VESSEL=3
MAX_POSTS_PER_DAY_TIMEZONE_TRAVELERS=4

